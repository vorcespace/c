  'casino-malaysia-free-credit',
  'new-online-casino-malaysia',
  'mega888-malaysia',
  'rollex11-casino',
  'evo888-malaysia'
];

// Get today's date
$today = date('Y-m-d');

// Output the XML header
echo '<?xml version="1.0" encoding="UTF-8"?>', "\n";

// Open the <urlset> tag for the sitemap
echo '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">', "\n";

// Loop through the keywords and generate a <url> entry for each
foreach ($keywords as $keyword):
?>
  <url>
    <loc><?= htmlspecialchars($domain . '/p/' . $keyword) ?></loc>
    <lastmod><?= $today ?></lastmod>
    <changefreq>weekly</changefreq>
